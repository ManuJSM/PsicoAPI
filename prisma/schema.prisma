generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["psicoApi"]
}
enum Role {
  PSICO
  USER
  @@schema("psicoApi")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullName  String
  phone     String
  role      Role     @default(USER)
  password  String
  createdAt DateTime @default(now())

  // Relaci贸n auto-referenciada: un paciente tiene un psic贸logo
  psicoId   Int?     // Nullable porque un psic贸logo no tiene psico
  psico     User?    @relation("PsicoPacientes", fields: [psicoId], references: [id])

  // Un psic贸logo puede tener muchos pacientes
  pacientes User[]   @relation("PsicoPacientes")
  @@schema("psicoApi")
}
